@{
    ViewData["Title"] = "ChatApplication";
}

<div class="container1">
    <div class="row">
        @*  Menu  *@
        <nav class="menu">
            <ul class="items">
                @*  Home     *@
                <li class="item">
                    <i class="fa fa-home" aria-hidden="true"></i>
                </li>

                @*  User    *@
                <li class="item">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </li>

                @*  Pencil    *@
                <li class="item">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </li>

                @*  Active  *@
                <li class="item item-active">
                    <i class="fa fa-commenting" aria-hidden="true"></i>
                </li>

                @*  File    *@
                <li class="item">
                    <i class="fa fa-file" aria-hidden="true"></i>
                </li>

                @*  Settings    *@
                <li class="item">
                    <i class="fa fa-cog" aria-hidden="true"></i>
                </li>
            </ul>
        </nav>

        @*  Searchbar Box   *@
        <section class="discussions">
            @*  Searchbar Header    *@
            <div class="discussion search">
                <div class="searchbar">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    <input type="text" placeholder="Search here... " id="search"></input>
                </div>
            </div>

            @* Chats logs *@

            @* Active chat *@
            <div class="discussion message-active">
                @* Box Information *@

                @* Photo *@
                <div class="photo" style="background-image: url(https://image.noelshack.com/fichiers/2017/38/2/1505775062-1505606859-portrait-1961529-960-720.jpg);">
                    <div class="online"></div>
                </div>

                <div class="desc-contect">
                    @* Name *@
                    <p class="name">Name Here</p>
                    @* Most recent msg *@
                    <p class="message">Last Mesage Here</p>
                </div>

                @* Last active time *@
                <div class="timer">1 Hour ago</div>
            </div>

            @* Other chats *@
            <div class="discussion">
                <div class="photo" style="background-image: url(http://e0.365dm.com/16/08/16-9/20/theirry-henry-sky-sports-pundit_3766131.jpg?20161212144602);">
                    <div class="online"></div>
                </div>

                <div class="desc-contact">
                    <p class="name">Mukesh</p>
                    <p class="message">Last msg</p>
                </div>
                <div class="timer">3 min</div>
            </div>
        </section>

        @* Chat Box *@
        <section class="chat" id="chatBox">
            @* Chat Header *@
            <div class="header-chat">
                @* User Icon *@
                <i class="icon fa fa-user-o" aria-hidden="true"></i>
                @* Name *@
                <p class="name">No one</p>
                @* Icon *@
                <i class="icon clickable fa fa-ellipsis-h right" aria-hidden="true"></i>
            </div>

            @* Msg Box *@
            <div class="messages-chat" id="msgs">
                @* msg + profile + online status *@
                <div class="message">
                    <div class="photo" style="background-image: url(https://image.noelshack.com/fichiers/2017/38/2/1505775062-1505606859-portrait-1961529-960-720.jpg);">
                        <div class="online"></div>
                    </div>
                    <p class="text"> Hi, how are you ? </p>
                </div>

                @* msg only *@
                <div class="message text-only">
                    <p class="text"> What are you doing tonight ? Want to go take a drink ?</p>
                </div>

                @* time *@
                <p class="time"> 14h58</p>
            </div>

            @*Text Box*@
            <div class="footer-chat">
                <i class="icon fa fa-smile-o clickable" style="font-size:25pt;" aria-hidden="true"></i>
                <input type="text" class="write-message" placeholder="Type your message here"></input>
                <i class="icon send fa fa-paper-plane-o clickable" aria-hidden="true" id="sendBtn"></i>
            </div>
        </section>
    </div>
</div>

@* Client-Side SignalR Library *@
<script src="~/js/signalr.js"></script>

@* JQuery *@
<script src="~/js/jquery.js"></script>

@* Script to handle messages *@
<script src="~/js/chat.js"></script>