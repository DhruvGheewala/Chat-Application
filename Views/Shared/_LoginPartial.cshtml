@using Microsoft.AspNetCore.Identity
@using ChatApplication.Areas.Identity.Data

@inject SignInManager<ChatApplicationUser> SignInManager
@inject UserManager<ChatApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="my-2">
                <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@ViewBag.Name</a>
            </div>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="my-2 p-1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link btn-sm text-white">Logout</button>
            </form>
        </li>
    }
</ul>
